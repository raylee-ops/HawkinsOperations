<group name="rootcheck,">
  <rule id="100053" level="13">
    <if_sid>510</if_sid>
    <match>Rootkit|Trojan|Backdoor</match>
    <description>Rootkit or backdoor detected on system</description>
    <mitre>
      <id>T1014</id>
    </mitre>
    <group>rootkit,malware,</group>
  </rule>
</group>

